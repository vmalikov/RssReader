<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="66dp" tools:layout_editor_absoluteX="84dp"
                android:id="@+id/editText" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="66dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="84dp" android:layout_marginEnd="85dp"
                app:layout_constraintEnd_toEndOf="parent" android:hint="Enter username"
                android:textAlignment="center"/>
        <Button
                android:text="Go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="147dp"
                tools:layout_editor_absoluteX="209dp"
                android:id="@+id/go"
                android:layout_marginEnd="87dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="38dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"/>
    </android.support.constraint.ConstraintLayout>
</layout>